<VBox fx:controller="com.coffrefort.client.controllers.LoginController"
      xmlns="http://javafx.com/javafx/21.0.2" xmlns:fx="http://javafx.com/fxml/1"
      alignment="CENTER" spacing="20" 
      style="-fx-background-color: #15161A; -fx-padding: 40;">
    
    <!-- Logo Section -->
    <VBox alignment="CENTER" spacing="15">
        <!-- Logo Image -->
        <ImageView fitHeight="100" fitWidth="100" preserveRatio="true">
            <image>
                <Image url="@BCO.png"/>
            </image>
        </ImageView>
        
        <!-- Title -->
        <Text text="ObsiLock" 
              style="-fx-font-size: 42px; -fx-font-weight: bold; -fx-fill: #8ECB18; -fx-font-family: 'Arial';">
