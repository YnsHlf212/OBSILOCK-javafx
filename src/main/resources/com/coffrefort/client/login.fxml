                          -fx-padding: 10 15;"/>
        
        <!-- Password Field -->
        <HBox alignment="CENTER_LEFT" spacing="0" prefWidth="350" prefHeight="45"
              style="-fx-background-color: #5a5a5a; -fx-background-radius: 5;">
            <PasswordField fx:id="passwordField" 
                           promptText="Mot de Passe"
                           HBox.hgrow="ALWAYS"
                           style="-fx-background-color: transparent; 
                                  -fx-text-fill: #ffffff; 
                                  -fx-prompt-text-fill: #a0a0a0;
                                  -fx-font-size: 14px;
                                  -fx-padding: 10 5 10 15;
                                  -fx-background-insets: 0;
                                  -fx-border-width: 0;"/>
            <TextField fx:id="passwordTextField" 
                       promptText="Mot de Passe"
                       HBox.hgrow="ALWAYS"
                       visible="false"
                       managed="false"
                       style="-fx-background-color: transparent; 
                              -fx-text-fill: #ffffff; 
                              -fx-prompt-text-fill: #a0a0a0;
                              -fx-font-size: 14px;
                              -fx-padding: 10 5 10 15;
                              -fx-background-insets: 0;
                              -fx-border-width: 0;"/>
