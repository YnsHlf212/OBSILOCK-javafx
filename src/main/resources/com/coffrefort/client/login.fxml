        </Text>
    </VBox>
    
    <VBox spacing="15" alignment="CENTER" maxWidth="350">
        <!-- Email Field -->
        <TextField fx:id="emailField" 
                   promptText="Email"
                   prefWidth="350" prefHeight="45"
                   style="-fx-background-color: #5a5a5a; 
                          -fx-text-fill: #ffffff; 
                          -fx-prompt-text-fill: #a0a0a0;
                          -fx-background-radius: 5;
